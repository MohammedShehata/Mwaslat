<label class="span11 label"><h2>Routes passing by "<%=@name%>"</h2></label>
<table class="span11 table table-striped table-bordered" >
	<thead>
		<tr>
			<th>Source</th>
			<th>Destination</th>
			<th>Cost</th>
			<th>Using</th>
			<th>Description</th>
			<th>Feedback</th>
			<% if (current_user.admin?)%> 
				<th>User</th>
			<%end%>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		<%= render @routes, :confirm => false, :enhance => true %>
	</tbody>
</table>